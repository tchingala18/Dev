<div class="bg-light d-flex justify-content-center align-items-center vh-100 no-scroll">
    <div class="auth-container">
        <h3 class="text-center">Registrar</h3>
        <form id="registerForm">
            <div class="mb-3">
                <label for="first_name" class="form-label">Nome</label>
                <input type="text" class="form-control rounded-pill" id="first_name" placeholder="Digite seu nome"
                    required>
            </div>
            <div class="mb-3">
                <label for="last_name" class="form-label">Sobrenome</label>
                <input type="text" class="form-control rounded-pill" id="last_name" placeholder="Digite seu sobrenome"
                    required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">E-mail</label>
                <input type="email" class="form-control rounded-pill" id="email"  placeholder="Digite seu e-mail"
                    required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Senha</label>
                <input type="password" class="form-control rounded-pill" id="password" placeholder="Digite sua senha"
                    required>
            </div>
            <button type="submit" class="btn btn-success p-2 rounded-pill w-100">
                <i class="fa-solid fa-user-plus me-2"></i>Criar Conta
            </button>

            <div class="text-center mt-3 no-link">
                Já tem uma conta? Faça <a href="/login">Login</a>
            </div>
        </form>
    </div>
</div>