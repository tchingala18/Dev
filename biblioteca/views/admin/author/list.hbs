<!--menu navbar-->
{{> navbar }}


<!--main content -->
<div class="content mt-5" id="content">
    <div class="mb-3">
        <span class="content-title">
            {{>page_title}}
        </span>
    </div>
    <hr>

    <div class="mb-3">
        <a href="/admin/author/new" class="btn btn-outline-primary">
            <i class="fa-solid fa-plus me-2"></i> Adicionar Autor
        </a>
    </div>

    <div class="col-xxl col-12">

        <div class="container-fluid mt-4 py-4">


            {{#if author.length}}
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Nacionalidade</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each author}}
                    <tr id="category-{{this.id}}">
                        <td>
                            <h5>{{this.id}}</h5>
                        </td>
                        <td>
                           <a href="#" class="text-decoration-none"> <h5>{{this.name}}</h5></a>
                        </td>
                        <td>
                           <a href="#" class="text-decoration-none"> <h5>{{this.nationality}}</h5></a>
                        </td>
                        <td class="text-end align-items-center">

                            <a href="/admin/author/update/{{this.id}}" class="btn btn-outline-secondary btn-md px-3 m-1">
                                <i class="fa-regular fa-pen-to-square me-2"></i>
                            </a>
                            <button onclick="deleteAuthor({{this.id}})" class="btn btn-outline-danger btn-md px-3 m-1">
                                <i class="fa-solid fa-cubes-stacked me-2"></i>
                            </button>
                            <a href="#" class="btn btn-outline-warning btn-md px-3 m-1">
                                <i class="fa-solid fa-newspaper me-2"></i>
                            </a>

                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            {{else}}
            <div class="mb-3 alert alert-danger" role="alert">
                <h4 class="text-muted">{{message}} Clique <a href="/admin/author/new" class="link-none-decoration">aqui</a>
                    para adicionar</h4>
            </div>
            {{/if}}
        </div>

    </div>
</div>